	<package name="com.internousdev.easysite.action" extends="struts-default">

		<action name="HomeAction" class="com.internousdev.easysite.action.HomeAction"
			method="execute">
			<result name="success">login.jsp</result>
		</action>

		<action name="LoginAction" class="com.internousdev.easysite.action.LoginAction"
			method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">home.jsp</result>
		</action>

		<action name="UserCreateAction"
			class="com.internousdev.easysite.action.UserCreateAction" method="execute">
			<result name="success">userCreate.jsp</result>
		</action>

		<action name="UserCreateConfirmAction"
			class="com.internousdev.easysite.action.UserCreateConfirmAction"
			method="execute">
			<result name="success">userCreateConfirm.jsp</result>
			<result name="error">userCreate.jsp</result>
		</action>

		<action name="UserCreateCompleteAction"
			class="com.internousdev.easysite.action.UserCreateCompleteAction"
			method="execute">
			<result name="success">userCreateComplete.jsp</result>
		</action>

		<action name="BuyItemAction" class="com.internousdev.easysite.action.BuyItemAction"
			method="execute">
			<result name="success">buyItemConfirm.jsp</result>
		</action>

		<action name="BuyItemConfirmAction"
			class="com.internousdev.easysite.action.BuyItemConfirmAction" method="execute">
			<result name="success">buyItemComplete.jsp</result>
		</action>

		<action name="MyPageAction"
			class="com.internousdev.easysite.action.MyPageAction" method="execute">
			<result name="success">myPage.jsp</result>
		</action>

	</package>
